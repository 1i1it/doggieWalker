<html>
  <head>
    <link rel="stylesheet" type="text/css" href="style.css">
  </head>
<body class='body-style'>

  <section>
    <h1 id="welcomeMsg"> Welcome to <a href="/">Sinatra TODO List Manager.</a></h1>
  </section>
  
  <section class='rounded-corners'>
    <h3>Add new item</h3>
    <form method='post' action='/add'>
      <p><select name="owner_name">
      <option value="Sella">Sella</option>
      <option value="Liliya">Liliya</option>
      <option value="Bubba">Bubba</option>
    </select><p>
      <!-- <input type='text' name='owner_name' placeholder='Owner'> -->
      <input type='text' name='task_name' placeholder='Task name'>
      <input name='task_description' placeholder='Task description'>
      <button type='submit' class='btn'>Add item</button>
    </form>
  </section>
  
  <%= erb :tasks_list, locals: {tasks: tasks} %>
  
  </body>
</html>
